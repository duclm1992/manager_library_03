<li>
  <%= gravatar_for user, size: 50 %>
  <%= link_to user.name, user %>
  <% if current_user.is_admin? %>
    | <%= link_to t("user.edit"), edit_admin_user_path(user) %>
    | <%= link_to t("users.delete"), admin_user_path(user), method: :delete,
      data: {confirm: t("users.sure")} %>
  <% end %>
</li>
